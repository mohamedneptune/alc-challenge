<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="1dp"
        android:left="-2dp"
        android:right="-2dp"
        android:top="-2dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="0.5dp"
                android:color="@android:color/black" />
            <solid android:color="@color/transparent" />
            <stroke
                android:width="1dp"
                android:color="#737373"/>
            <padding
                android:right="5dp"/>
        </shape>
    </item>
</layer-list>